def encode(message):
    encoded=""
    count=0
    i=0
    character=message[i]
    for i in range(0,len(message)):
        if (message[i]==character):
            count+=1
        else:
            encoded+=(str(count)+str(character))
            character=message[i]
            count=1
        if(i==(len(message))-1):
            encoded+=(str(count)+str(character))
    return encoded

#Provide different values for message and test your program
encoded_message=encode("ABBBBCCCCCCCCAB")
print(encoded_message)
