def calculate_bill_amount(food_type,quantity_ordered,distance_in_kms):
    bill_amount=0
    #write your logic here
    if (food_type=="N"):
        food_amount=150
    elif (food_type=="V"):
        food_amount=120
    else:
        bill_amount=-1
    if distance_in_kms<=0 or quantity_ordered<=0 or bill_amount==-1:
        bill_amount=-1
    elif distance_in_kms<=3:
        distance_amount=0
    elif distance_in_kms<=6:
        distance_amount=(distance_in_kms-3)*3
    else:
        distance_amount=(distance_in_kms-6)*6+9
    if bill_amount!=-1:
        bill_amount=(food_amount*quantity_ordered)+distance_amount
    return bill_amount

#Provide different values for food_type,quantity_ordered,distance_in_kms
bill_amount=calculate_bill_amount("N",2,7)
print(bill_amount)
