#OOPR-Assgn-19
class Ticket:
    counter=0
    def __init__(self,passenger_name,source,destination):
        self.__passenger_name=passenger_name
        self.__ticket_id=None
        self.__source=source
        self.__destination=destination

    def get_passenger_name(self):
        return self.__passenger_name


    def get_ticket_id(self):
        return self.__ticket_id


    def get_source(self):
        return self.__source


    def get_destination(self):
        return self.__destination
    
    def validate_source_destination(self):
        if self.__source.upper()=="DELHI" :
                if self.__destination.upper()=="MUMBAI":
                    return  True
                elif self.__destination.upper()=="CHENNAI":
                    return  True
                elif self.__destination.upper()=="PUNE":
                    return  True
                elif self.__destination.upper()=="KOLKATA":
                    return  True
                else:
                    return False
        else:
            return False
    
    def generate_ticket(self):
        if self.validate_source_destination():
            Ticket.counter+=1
            a=self.__destination[0]
            if Ticket.counter<10:
                b="0"+str(Ticket.counter)
            else:
                b=str(Ticket.counter)
            self.__ticket_id="D"+a+b
            
                    
                
            
            
            
            
